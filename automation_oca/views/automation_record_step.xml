<odoo>
    <record id="automation_record_step_form_view" model="ir.ui.view">
        <field name="model">automation.record.step</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <field name="id" />
                        <field name="name" />
                        <field name="scheduled_date" />
                        <field name="processed_on" />
                        <field name="step_type" />
                        <field invisible="message_id == False" name="message_id" />
                    </group>
                    <group invisible="state != 'error'" name="error" string="Error">
                        <field name="error_trace" nolabel="1" />
                    </group>
                </sheet>
            </form></field>
    </record>
    <record id="automation_record_step_tree_view" model="ir.ui.view">
        <field name="model">automation.record.step</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name" />
                <field name="state" />
                <button
                    invisible="state != 'scheduled'"
                    name="run"
                    string="Run"
                    type="object"
                />
            </tree></field>
    </record>
    <record id="automation_record_step_search_view" model="ir.ui.view">
        <field name="name">automation.record.step.search</field>
        <field name="model">automation.record.step</field>
        <field name="arch" type="xml">
            <search>
                <field name="configuration_step_id" />
                <field name="configuration_id" />
                <field name="record_id" />
                <separator />
                <filter
                    domain="[('state', '=', 'scheduled')]"
                    name="scheduled"
                    string="Scheduled"
                />
                <filter domain="[('state', '=', 'done')]" name="done" string="Done" />
                <filter
                    domain="[('state', '=', 'expired')]"
                    name="expired"
                    string="Expired"
                />
                <filter
                    domain="[('state', '=', 'rejected')]"
                    name="rejected"
                    string="Rejected"
                />
                <filter
                    domain="[('state', '=', 'error')]"
                    name="error"
                    string="Error"
                />
                <filter
                    domain="[('state', '=', 'cancel')]"
                    name="cancel"
                    string="Canceled"
                />
                <separator />
                <filter
                    date="scheduled_date"
                    name="filter_schedule_date"
                    string="Scheduled date"
                />
                <separator />
                <filter
                    date="processed_on"
                    name="filter_processed_on"
                    string="Processed on"
                />
            </search></field>
    </record>
    <record id="automation_record_step_graph_view" model="ir.ui.view">
        <field name="name">automation.record.step.graph</field>
        <field name="model">automation.record.step</field>
        <field name="arch" type="xml">
            <graph string="Records">
                <field interval="day" name="scheduled_date" />
                <field name="state" />
            </graph></field>
    </record>
    <record id="automation_record_step_pivot_view" model="ir.ui.view">
        <field name="name">automation.record.step.pivot</field>
        <field name="model">automation.record.step</field>
        <field name="arch" type="xml">
            <pivot string="Records">
                <field name="configuration_id" type="row" />
                <field name="state" type="col" />
            </pivot></field>
    </record>
    <record id="automation_record_step_act_window" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">automation.record.step</field>
        <field name="view_mode">graph,pivot,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record id="automation_record_step_menu" model="ir.ui.menu">
        <field name="name">Activities</field>
        <field name="parent_id" ref="automation_reporting_root_menu" />
        <field name="action" ref="automation_record_step_act_window" />
        <field eval="20" name="sequence" />
    </record>
</odoo>
