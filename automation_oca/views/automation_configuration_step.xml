<odoo>
    <record id="automation_configuration_step_form_view" model="ir.ui.view">
        <field name="model">automation.configuration.step</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field
                                name="name"
                                placeholder="e.g. Remember unpaid invoices"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="step_type" />
                            <field invisible="1" name="configuration_id" />
                            <field invisible="1" name="model_id" />
                            <field invisible="1" name="model" />
                        </group>
                        <group>
                            <label for="trigger_interval" string="Trigger" />
                            <div class="container ps-0">
                                <div class="row">
                                    <div class="col-2">
                                        <field name="trigger_interval" nolabel="1" />
                                    </div>
                                    <div class="col-10">
                                        <field
                                            name="trigger_interval_type"
                                            nolabel="1"
                                        />
                                    </div>
                                </div>
                                <div class="row">
                                    <span class="col-2">
                                        after
                                    </span>
                                    <div class="col-10">
                                        <field name="trigger_type" nolabel="1" />
                                    </div>
                                </div>
                                <div class="row" invisible="trigger_type == 'start'">
                                    <span class="col-2">
                                        of
                                    </span>
                                    <div class="col-10">
                                        <field
                                            domain="[('configuration_id', '=', configuration_id)]"
                                            name="parent_id"
                                        />
                                    </div>
                                </div>
                            </div>
                            <field invisible="1" name="allow_expiry" />
                            <field invisible="allow_expiry == False" name="expiry" />
                            <label
                                for="expiry_interval"
                                invisible="expiry == False"
                                string="Trigger"
                            />
                            <div class="container ps-0" invisible="expiry == False">
                                <div class="row">
                                    <div class="col-2">
                                        <field
                                            name="expiry_interval"
                                            nolabel="1"
                                            required="expiry == True"
                                        />
                                    </div>
                                    <div class="col-10">
                                        <field
                                            name="expiry_interval_type"
                                            nolabel="1"
                                            required="expiry == True"
                                        />
                                    </div>
                                </div>
                            </div>
                        </group>
                        <group invisible="step_type != 'action'">
                            <field
                                context="{'default_model_id': model_id}"
                                name="server_action_id"
                                required="step_type == 'action'"
                            />
                        </group>
                        <group invisible="step_type != 'mail'">
                            <field
                                name="mail_template_id"
                                required="step_type == 'mail'"
                            />
                            <field name="mail_author_id" />
                        </group>
                        <group invisible="step_type != 'activity'">
                            <field
                                name="activity_type_id"
                                required="step_type == 'activity'"
                            />
                            <label
                                for="activity_date_deadline_range"
                                string="Deadline"
                            />
                            <div class="container ps-0">
                                <div class="row">
                                    <div class="col-2">
                                        <field
                                            name="activity_date_deadline_range"
                                            nolabel="1"
                                        />
                                    </div>
                                    <div class="col-10">
                                        <field
                                            name="activity_date_deadline_range_type"
                                            nolabel="1"
                                        />
                                    </div>
                                </div>
                            </div>
                            <field name="activity_user_type" />
                            <field
                                invisible="activity_user_type != 'specific'"
                                name="activity_user_id"
                                required="activity_user_type == 'specific'"
                            />
                            <field
                                domain="[('model_id', '=', model_id)]"
                                invisible="activity_user_type != 'generic'"
                                name="activity_user_field_id"
                                required="activity_user_type == 'generic'"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="specific_domain" string="Specific Domain">
                            <field
                                name="domain"
                                options="{'foldable': True, 'model': 'model'}"
                                widget="domain"
                            />
                        </page>
                        <page name="final_domain" string="Final Domain">
                            <div>
                                This is the final domain that will be applied to the records.
                                Consists in the join of the specific domain of the step and the domain of the records.
                            </div>
                            <field
                                name="applied_domain"
                                options="{'foldable': True, 'model': 'model'}"
                                widget="domain"
                            />
                        </page>
                        <page
                            invisible="step_type != 'activity'"
                            name="activity"
                            string="Activity"
                        >
                            <group>
                                <field name="activity_summary" />
                                <field name="activity_note" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form></field>
    </record>
    <record id="automation_configuration_step_search_view" model="ir.ui.view">
        <field name="model">automation.configuration.step</field>
        <field name="arch" type="xml">
            <search>
                <!-- TODO -->
            </search></field>
    </record>
    <record id="automation_configuration_step_tree_view" model="ir.ui.view">
        <field name="model">automation.configuration.step</field>
        <field name="arch" type="xml">
            <tree>
                <!-- TODO -->
                <field name="name" />
            </tree></field>
    </record>
</odoo>
