<odoo>

    <record model="ir.ui.view" id="automation_configuration_form_view">
        <field name="model">automation.configuration</field>
        <field
            name="inherit_id"
            ref="automation_oca.automation_configuration_form_view"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='automation_step_ids']/kanban//button[hasclass('o_automation_kanban_header_icon')]"
                position="inside"
            >
                <span
                    class="fa fa-paper-plane"
                    t-if="record.step_type.raw_value == 'gateway'"
                    title="Gateway"
                    role="img"
                    aria-label="Gateway"
                />
            </xpath>
        </field>
    </record>

</odoo>
